@model IEnumerable<CompanyViewModel>

@{
    ViewBag.Title = "Company Dashboard";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="text-center row">
    @foreach (var company in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="~/companyIcon.png" alt="Company Image">
            <div class="card-body">
                <h5 class="card-title mt-1">@company.Name</h5>
            </div>

            <form class="input-group-sm" asp-controller="Company" asp-action="Details" asp-route-bookId="@company.Id">
                <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="View" />
            </form>
        </div>
    }
</div>

