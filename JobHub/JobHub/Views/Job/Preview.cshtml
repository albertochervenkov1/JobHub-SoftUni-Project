@model AddJobViewModel

@{
    ViewBag.Title = "Check your job offer";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label">Job Title</label>
                <h3>@Model.Title</h3>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label">Description*</label>
                <h3>@Model.Description</h3>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Salary" class="form-label">Salary</label>
                <h3>@Model.Salary</h3>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label">Category</label>
               @* <select asp-for="@Model.CategoryId" class="form-control">
                    @foreach (var category in Model.JobCategories)
                    {
                        <option value="@category.Id">@category.Label</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>*@
                <h3>@Model.JobCategories.Where(c=>c.Id==@Model.CategoryId).Select(c=>c.Label).ToString()</h3>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>








